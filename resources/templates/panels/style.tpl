body, h1, h2, h3, h4, h5, table {
	font-family: {{FONTFAMILY}}, sans-serif;
	font-size: {{FONTSIZE}}pt;
	color: rgb(50, 50, 50);
}

body {
	padding: 2pt;
	margin: 0;
}

h1 {
	padding: 2pt;
	margin: 0;
	color: rgb(41, 41, 140);
}

h2 {
	padding: 1pt;
	margin: 0;
	color: rgb(41, 41, 140);
}

h3 {
	padding: 1pt 0pt 0pt 1pt;
	margin: 0;
	font-size: 90%;
	color: rgb(41, 41, 140);
}

table, td, tr {
	font-size: 93%;
	padding: 1pt 0pt 0pt 1pt;
	/*border: 1pt solid black;*/
}

td {
	width: 160px;
}

td.description {
	width: 230px;
}

td.quantity {
	width: 60px;
}

td.unit {
	width: 60px;
}

.maintable {
	/* width: 100%; */
}

.section {
	padding: 2pt 0pt 5pt 2pt;
	margin: 0;
}

.subsection {
	padding: 1pt 0pt 1pt 4pt;
	margin: 0;
}
